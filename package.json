{
  "name": "spellingbee",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:e2e": "playwright test",
    "deploy:preview": "npm run build && wrangler pages deploy dist --project-name=spellingisfun",
    "deploy:prod": "npm run build && wrangler deploy --config wrangler-worker.toml && wrangler pages deploy dist --project-name=spellingisfun --branch=main",
    "deploy:worker": "wrangler deploy --config wrangler-worker.toml",
    "recalculate:difficulty": "node scripts/recalculateDifficulty.js",
    "sync:audio": "node scripts/sync-mw-audio.cjs"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.4.2",
    "peerjs": "^1.5.4",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "jsdom": "^26.0.0",
    "opencc-js": "^1.0.5",
    "vite": "^6.1.0",
    "vitest": "^3.0.5",
    "wrangler": "^4.61.1"
  }
}
